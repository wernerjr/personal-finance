{
  "name": "personal-finance",
  "version": "1.0.0",
  "description": "Aplicativo completo de controle financeiro pessoal",
  "main": "src/main.tsx",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "test:coverage": "jest --coverage",
  },
  "keywords": [
    "react",
    "typescript",
    "vite",
    "supabase",
    "personal-finance",
    "shadcn-ui",
    "recharts"
  ],
  "author": "Seu Nome",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/personal-finance.git"
  },
  "bugs": {
    "url": "https://github.com/seu-usuario/personal-finance/issues"
  },
  "homepage": "https://github.com/seu-usuario/personal-finance#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
